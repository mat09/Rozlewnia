<Window x:Class="Rozlewnia_WPF.BootleAddToSendDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BootleAddToSendDialog" Height="194" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Grid.Column="0" Name="dt" Margin="5"></DataGrid>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center">
            <Button Content="Dodaj" IsDefault="True" Margin="10,0" Click="AddBootleToSend_click"></Button>
            <Button Content="Anuluj" IsCancel="True" Margin="10,0"></Button>
        </StackPanel>
    </Grid>
</Window>
