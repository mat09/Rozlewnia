<Window x:Class="Rozlewnia_WPF.editBootleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Butle" Height="197" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dt" Margin="4" ></DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="2,10" HorizontalAlignment="Center">
            <Button Content="Dodaj" Margin="10,0" IsDefault="True" Click="Add"></Button>
            <Button Content="Usuń" Margin="10,0" Click="Delete"></Button>
            <Button Content="Anuluj" IsCancel="True" Margin="10,0"></Button>
        </StackPanel>
    </Grid>
</Window>
