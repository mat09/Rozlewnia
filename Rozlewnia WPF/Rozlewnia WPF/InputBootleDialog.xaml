<Window x:Class="Rozlewnia_WPF.InputBootleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przypisz butle" Height="149" Width="205">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="ID Butli" Grid.Row="0" Grid.Column="0" Margin="5"></Label>
        <TextBox MaxLength="6" Grid.Row="0" Grid.Column="1" Margin="5" Name="IdTextBox"></TextBox>
        <Label Name="msg"  Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="1"></Label>
        <Button Content="Przypisz" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" MaxWidth="100" Click="attachBootle_Click"></Button>
    </Grid>
</Window>
